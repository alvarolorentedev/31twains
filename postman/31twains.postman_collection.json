{
	"info": {
		"_postman_id": "4fe97886-9f5e-4135-93b6-79c907a01b70",
		"name": "31twains",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1.Auth",
			"item": [
				{
					"name": "1.Get",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"to have token on the body\", function () {",
									"    pm.expect(pm.response.json().token).to.not.be.undefined;",
									"    pm.environment.set(\"sessionToken\", pm.response.json().token);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "password",
									"value": "{{password}}",
									"type": "string"
								},
								{
									"key": "username",
									"value": "{{username}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{url}}/auth",
							"host": [
								"{{url}}"
							],
							"path": [
								"auth"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "2.Quotes",
			"item": [
				{
					"name": "1.Get quotes for user",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"to have user and quotes on the body\", function () {",
									"    pm.expect(pm.response.json().user).to.not.be.undefined;",
									"    pm.expect(pm.response.json().quotes).to.not.be.undefined;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{sessionToken}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{url}}/quotes",
							"host": [
								"{{url}}"
							],
							"path": [
								"quotes"
							]
						}
					},
					"response": []
				}
			]
		}
	],
